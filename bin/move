#!/usr/bin/env ruby

require_relative '../lib/move.rb'
puts "Welcome to Tic Tac Toe!"
puts "Where would you like to go?"

input = gets.strip
input_to_index(input)
value = "X"
board = [" ", " ", " "," "," ", " "," "," "," "]
array = board 
index = input_to_index(input)
move(array, index, value)

# Code your CLI Here
display_board(board)